<div class="form-alert{{#if success}} form-alert--success{{else}} form-alert--fail{{/if}}">
  {{#if message}}<h6 class="push-half-bottom">{{message}}</h6>{{/if}}
  {{#if errors}}
    <ul class="push-half-bottom">
      {{#each errors}}
        <li>
          {{this}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>
